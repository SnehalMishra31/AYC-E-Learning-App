<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main_first_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/createBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/blue_home"
            android:textColor="@color/white"
            android:padding="25dp"
            android:text="Create User" />

        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/red"
            android:padding="25dp"
            android:text="logout" />
    </LinearLayout>

    <Button
        android:id="@+id/requestbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="25dp"
        android:background="@color/dark_violet_home"
        android:textColor="@color/white"
        android:text="View Users's requests" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/quiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/yellow_home"
                android:text="Add Quiz" />

<!--            <Button-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_margin="2dp"-->
<!--                android:layout_weight="1"-->
<!--                android:background="@color/white"-->
<!--                android:text="HELLOWORLD" />-->

            <Button
                android:id="@+id/addUserFaculty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="3"
                android:visibility="visible"
                android:textColor="@color/white"
                android:background="@color/violet_home"
                android:text="ADD USER FACULTY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/addRecentLecture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/light_green_home"
                android:layout_weight="1"
                android:text="Add Recent Lecture" />

<!--            <Button-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_margin="2dp"-->
<!--                android:layout_weight="3"-->
<!--                android:background="@color/dark_violet_home"-->
<!--                android:text="YES YES YES" />-->


            <Button
                android:id="@+id/addstudymaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/green_home"
                android:textColor="@color/white"
                android:text="STUDY MATERIAL" />

            <Button
                android:id="@+id/addGemsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="Add Gems Student" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
